<div class="card-header">
	<a href="/">Go Back</a>
	<h3>Create a new Account</h3>
</div>
<div class="card-body">
	{{#if registrationSubmitted}}
		<h3>Thanks for getting in touch.</h3>
	{{else}}
		<form method="post">
			<input type="hidden" name="action" value="user.create">
			<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
				<div class="form-row">
					<div class="col-md-6">
						<label>First Name</label>
						<input type="text" name="first" class="form-control" value="{{formData.first}}" placeholder="First Name..">
					</div>
					<div class="col-md-6">
						<label>Last Name</label>
						<input type="text" name="last" class="form-control" value="{{formData.last}}" placeholder="Last Name..">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="form-row">
					<div class="col-md-6  {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}" placeholder="example@example.com">
					</div>
					<div class="col-md-6  {{#if validationErrors.role}}has-error{{/if}}">
						<label>Your Role</label>
						<select type="role" name="role" class="form-control" value="{{formData.role}}">
							<option value=" ">Select..</option>
							<option value="teacher">Teacher</option>
							<option value="student">Student</option>
						</select>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="form-row">
					<div class="col-md-6">
						<label>Institution Name</label>
						<input type="institution" name="institution" class="form-control" value="{{formData.institution}}" placeholder="optional">
					</div>
					<div class="col-md-6">
						<label>Institution Type</label>
						<select type="institutionType" name="institutionType" class="form-control" value="{{formData.institutionType}}">
							<option value=" ">Select</option>
							<option value="School">School</option>
							<option value="College">College</option>
							<option value="University">University</option>
						</select>
					</div>
				</div>
			</div>
			<div class="form-group {{#if validationErrors.password}}has-error{{/if}}">
				<div class="form-row">
					<div class="col-md-6">
						<label>Password</label>
						<input type="password" name="password" class="form-control" value="{{formData.password}}" placeholder="">
					</div>
					<div class="col-md-6">
						<label>Password confirm</label>
						<input type="password" name="password_confirm" class="form-control" value="{{formData.password_confirm}}" placeholder="">
					</div>
				</div>
			</div>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary btn-block">Sign-Up</button>
			</div>
		</form>
	{{/if}}
	<div class="text-center">
		<a class="d-block small mt-3" href="/signIn">Login Page</a>
		<a class="d-block small" href="#">Forgot Password?</a>
	</div>
</div>
