<div class="card-header">
	<a href="/">Go Back</a>
	<h3>User Login</h3>
</div>
<div class="card-body">
	{{#if signinSubmitted}}
			<h3>Thanks for getting in touch.</h3>
	{{else}}
	<form method="post">
		<input type="hidden" name="action" value="user.login">
		<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
			<label for="Email1">Email address</label>
			<input class="form-control" id="exampleInputEmail1" type="email" name="email" class="form-control" value="{{formData.email}}" aria-describedby="emailHelp" placeholder="Enter email">
		</div>
		<div class="form-group {{#if validationErrors.password}}has-error{{/if}}">
			<label for="Password">Password</label>
			<input class="form-control" id="exampleInputPassword1" type="password" name="password" class="form-control" value="{{formData.password}}" placeholder="Password">
		</div>
		<div class="form-group">
			<div class="form-check">
				<label class="form-check-label">
					<input class="form-check-input" type="checkbox"> Remember Password</label>
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary btn-block">Sign-in</button>
		</div>
	</form>
	{{/if}}
	<div class="text-center">
		<a class="d-block small mt-3" href="/signUp">Create an Account</a>
		<a class="d-block small" href="#">Forgot Password?</a>
	</div>
</div>
