<!-- Project charts-->
<div class="row">
	<div class="col-lg-6">
	    <!-- Example Area Chart Card-->
		<div class="card mb-3">
			<div class="card-header">
				<i class="fa fa-bar-chart"></i> Project Progress</div>
			<div class="card-body">
				<canvas id="myBarChart" width="100%" height="50"></canvas>
			</div>
			<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
		</div>
		<!-- Example Area Chart Card end-->
	</div>
	<div class="col-lg-6">
		<!-- Example Pie Chart Card-->
		<div class="card mb-3">
			<div class="card-header">
				<i class="fa fa-pie-chart"></i> Project Activities Pie-Chart </div>
			<div class="card-body">
				<canvas id="myPieChart" width="100%" height="50"></canvas>
			</div>
			<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
		</div>
		<!-- Example Pie Chart Card end-->
	</div>
</div>
<!-- showcase data start -->
<div class="row">
	{{#if data.showcases}}
		{{#each data.showcases}}
			<div class="col-lg-6">
			<div class="card mb-3">
				<a href="#">
					<img class="card-img-top img-fluid w-100" src="{{uploaded_file_path}}" alt="showcaseImage">
				</a>
				<div class="card-body">
					<h6 class="card-title mb-1"><a href="#">{{createdBy.name.firstname}} {{createdBy.name.lastname}}</a></h6>
					<p class="card-text small">{{title}}
					</p>
				</div>
				<hr class="my-0">
				<div class="card-body py-2 small">
					<a class="mr-3 d-inline-block" href="#">
						<i class="fa fa-fw fa-thumbs-up"></i>Like
					</a>
					<a class="mr-3 d-inline-block" href="#">
						<i class="fa fa-fw fa-comment"></i>Comment
					</a>
					<a class="d-inline-block" href="#">
						<i class="fa fa-fw fa-share"></i>Share
					</a>
					<a class="d-inline-block" href="/showcase/detailShowcase/{{_id}}">
						<i class="fa fa-fw fa-arrow-down"></i>Details
					</a>
				</div>
				<div class="card-footer small text-muted">Posted {{createdAt}} ago</div>
			</div>
		    </div>
		{{/each}}
	{{/if}}
</div>
<!-- showcase data ends -->
