{{#if ideaSubmitted}}
	<h3>Thanks for new Idea.</h3>
	{{{flashMessages messages.success}}}
{{else}}
<form method="post" enctype="multipart/form-data">
	<input type="hidden" name="action" value="idea.generate">
	<div class="form-group row">
		<label for="formTitle" class="col-sm-12 col-form-label">
			<b><i class="fa fa-fw fa-lightbulb-o"></i>Idea Generation Form: Save your idea using this form</b>
		</label>
	</div>
	<hr>
	<div class="form-group row">
		<label for="ideaTitle" class="col-md-2 col-form-label">Title of Your Idea:</label>
		<div class="col-sm-10">
			<input type="text" name="title" class="form-control" value="{{ data.idea.title }}" placeholder="Give a Title for your idea.....">
		</div>
	</div>
	<div class="form-group row">
		<label for="ideaDescription" class="col-md-2">Description:</label>
		<div class="col-sm-10">
		<textarea name="description" class="form-control" id="ideaGen" rows="3" placeholder="Give details of your idea.....">{{ data.idea.description }}</textarea>
		</div>
	</div>
	<div class="form-group">
		<label for="resources_upload" class="col-md-12"><h5 style="text-align: center">Add Rich Contents(Image, Video, Tweet, List):</h5></label>
		<div class="col-sm-10">
		<textarea name="resources_upload" class="form-control sir-trevor" id="resources_upload">{{ data.idea.resources_upload }}</textarea>
		</div>
	</div>
	<div class="form-group row">
		<label for="videoResource" class="col-md-2">Video Uploader:</label>
		<div class="col-sm-10">
			<input type="file" name="file_upload" id="file_upload">
			<input type="button" value="Upload" class="btn btn-primary" onclick="uploadMyFile()">
			<div id="new_path"></div>
			<br>
		</div>
		<div style="text-align:center" class="col-sm-12" id="video_file"></div>
	</div>
	<!--
	<div class="form-group">
		<label for="photoResource" class="col-md-12"><h5 style="text-align: center">Only Image:</h5></label>
		<div class="col-sm-10">
			<textarea name="photoResource" class="form-control sir-trevor-image-upload"></textarea>
		</div>
	</div>
	-->
	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Generate Idea</button>
		</div>
	</div>
</form>
{{/if}}
{{#if data.idea}}
<hr>
<div class="container">
	<div class="row">
		<label for="captionIdeaGeneration" class="col-sm-12 col-form-label">
			<h5 style="text-align: center"><i class="fa fa-fw fa-lightbulb-o"></i>List of Ideas</h5>
		</label>
	</div>
	{{#each data.idea}}
		<div class="row">
			<div class="col-sm-10">
				<ul>
					<li>
						<a href="/idea/detailIdea/{{_id}}">Idea Title: {{title}}</a>, Added By: {{ createdBy.name.first }} {{ createdBy.name.last }}
						{{#if projectId}} , <a href="/currentProject/{{projectId._id}}">Project Title: {{projectId.title}}</a>{{/if}}
					</li>
				</ul>
			</div>
		</div>
	{{/each}}
</div>
{{/if}}
