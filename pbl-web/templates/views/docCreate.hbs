<form method="post" enctype="multipart/form-data">
	<input type="hidden" name="action" value="add.doc">
	<div class="form-group row">
		<label for="documentationTitle" class="col-sm-12 col-form-label">Create a Documentation Page:</label>
		<div class="col-sm-12">
			<input type="text" name="title" class="form-control" placeholder="Give a title of the page...">
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-12">
			<textarea name="documentContent" class="form-control" id="documentContent" placeholder="Write documentation for your project..."></textarea>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Save Page</button>
		</div>
	</div>
</form>

